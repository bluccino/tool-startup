#!/bin/bash
# ec: echo args with color options
# Copyright (c) 2024 Bluenetics GmbH
# SPDX-License-Identifier: Apache-2.0

#===============================================================================
# ec -?;  ec --help   # print usage / comprehensive hel√º
#===============================================================================

  if [ "$*" == "-?" ] || [ "$*" == "--help" ] || [ "$*" == "--?" ]; then
    echo   "  usage: ec ...         # (uncolored) echo ... (version `ec --version`)"
    echo   '         ec -r ...      # (red)'
    echo   '         ec -g ...      # (green)'
    echo   '         ec -y ...      # (yellow)'
    echo   '         ec -b ...      # (blue)'
    echo   '         ec -m ...      # (magenta)'
    echo   '         ec -c ...      # (cyan)'
    echo   '         ec -0 ...      # (no color)'
    echo   ''
    if [ "$*" != "-?" ]; then
      echo '         ec +r          # switch to red     (continue with ec ...)'
      echo '         ec +g          # switch to green   (continue with ec ...)'
      echo '         ec +y          # switch to yellow  (continue with ec ...)'
      echo '         ec +b          # switch to blue    (continue with ec ...)'
      echo '         ec +m          # switch to magenta (continue with ec ...)'
      echo '         ec +c          # switch to cyan    (continue with ec ...)'
      echo '         ec +0          # disable color'
      echo ''
    fi
    echo   '         ec -?          # show usage'
    echo   '         ec --help      # comprehensive help'
    echo   '         ec --version   # print version'
    exit 0;
  fi

#===============================================================================
# print version: gic --version
#===============================================================================

   if [ "$*" == "--version" ] || [ "$*" == "--v" ]; then
      echo "1.0.0";
      exit 0
   fi

#===============================================================================
# let's go ...
#===============================================================================

   if [ "$1" == "+r" ] || [ "$1" == "-r" ]; then
     printf "\x1b[31m"
     if [ "$1" == "-r" ]; then
       shift; echo "$*"
       printf "\x1b[0m"
     fi
     exit 0
   fi

   if [ "$1" == "+g" ] || [ "$1" == "-g" ]; then
     printf "\x1b[32m"
     if [ "$1" == "-g" ]; then
       shift; echo "$*"
       printf "\x1b[0m"
     fi
     exit 0
   fi

   if [ "$1" == "+y" ] || [ "$1" == "-y" ]; then
     printf "\x1b[33m"
     if [ "$1" == "-y" ]; then
       shift; echo "$*"
       printf "\x1b[0m"
     fi
     exit 0
   fi

   if [ "$1" == "+b" ] || [ "$1" == "-b" ]; then
     printf "\x1b[34m"
     if [ "$1" == "-b" ]; then
       shift; echo "$*"
       printf "\x1b[0m"
     fi
     exit 0
   fi

   if [ "$1" == "+m" ] || [ "$1" == "-m" ]; then
     printf "\x1b[35m"
     if [ "$1" == "-m" ]; then
       shift; echo "$*"
       printf "\x1b[0m"
     fi
     exit 0
   fi

   if [ "$1" == "+c" ] || [ "$1" == "-c" ]; then
     printf "\x1b[36m"
     if [ "$1" == "-c" ]; then
       shift; echo "$*"
       printf "\x1b[0m"
     fi
     exit 0
   fi

   if [ "$1" == "+0" ] || [ "$1" == "-0" ]; then
     printf "\x1b[0m"
     if [ "$1" == "-0" ]; then
       shift; echo "$*"
       printf "\x1b[0m"
     fi
     exit 0
   fi

#===============================================================================
# default
#===============================================================================

   echo "$*"
